<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.AutoBattlePage"
             >

    <ContentPage.Content>
        <StackLayout Style="{StaticResource VerticalFillAndExpand}">
            <StackLayout Style="{StaticResource CardImageTextBox}">

                <Image
                        Source="ship7.gif"
                        Style="{StaticResource ImageLargeStyle}"
                        IsAnimationPlaying="True"
                        />

                <Button 
                        Text="Begin Quest"
                        Clicked="AutobattleButton_Clicked"/>
            </StackLayout>

            <StackLayout Style="{StaticResource CardImageTextBox}">

                <Label 
                    x:Name="BattleMessageValue"
                    Text=""
                    Style="{StaticResource BattleMessageStyle}"
                    />

            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>